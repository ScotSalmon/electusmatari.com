#!/usr/bin/env python

# Copyright (C) 2012 Jorgen Schaefer

import daemon
import logging
import ConfigParser
import mrintel

def main():
    ctx = daemon.DaemonContext()
    ctx.umask = 0o122
    conf = ConfigParser.SafeConfigParser()
    conf.read(["/home/forcer/.mrintel.conf"])
    with ctx:
        logging.basicConfig(filename=conf.get('log', 'logfile'),
                            format="%(asctime)s %(message)s",
                            level=logging.DEBUG)
        logging.info("MrIntel, at your service")
        threads = []
        for sec in conf.sections():
            if not sec.startswith("network "):
                continue
            bot = mrintel.MrIntel(conf,
                                  conf.get(sec, 'server'),
                                  conf.getint(sec, 'port'),
                                  conf.get(sec, 'nick'),
                                  conf.get(sec, 'user'),
                                  conf.get(sec, 'realname'),
                                  [channel.strip()
                                   for channel
                                   in conf.get(sec, 'channels').split(",")]
                                  )
            bot.daemon = True
            bot.start()
            threads.append(bot)
        while len(threads) > 0:
            threads[-1].join(60)
            if not threads[-1].is_alive():
                threads.pop()

main()
